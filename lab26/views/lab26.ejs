<%- include('includes/_header.ejs')%>
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Contacto</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
</head>
<body>
  <section class="section">
    <div class="container">
      <div class="box">
        <h1 class="title has-text-centered has-background-danger has-text-white py-3">MÃ¡ndanos un mensaje</h1>
        <form action="/mail" method="POST">
          <div class="columns">
            <div class="column">
              <div class="field">
                <label class="label">Tu Nombre</label>
                <div class="control">
                  <input class="input" type="text" name="nombre" required>
                </div>
              </div>
            </div>
            <div class="column">
              <div class="field">
                <label class="label">Tu Email</label>
                <div class="control">
                  <input class="input" type="email" name="email" required>
                </div>
              </div>
            </div>
          </div>

          <div class="field">
            <label class="label">Asunto</label>
            <div class="control">
              <input class="input" type="text" name="asunto" required>
            </div>
          </div>

          <div class="field">
            <label class="label">Tu Mensaje</label>
            <div class="control">
              <textarea class="textarea" name="mensaje" rows="5" required></textarea>
            </div>
          </div>

          <div class="field has-text-centered">
            <button class="button is-danger is-medium">Enviar mensaje</button>
          </div>
        </form>
      </div>
    </div>
  </section>
</body>
</html>
<%- include('includes/_footer.ejs')%>